<!DOCTYPE html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
  <title>Dashboard - shoperiz</title>
  <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
  <link rel="stylesheet" href="assets/fonts/fontawesome-all.min.css">
  <link rel="stylesheet" href="assets/fonts/font-awesome.min.css">
  <link rel="stylesheet" href="assets/fonts/fontawesome5-overrides.min.css">
  <link rel="stylesheet" href="assets/css/style.css">
</head>

<body>
  <div class="d-flex flex-column mt-2" id="content-wrapper">
    <!-- Option content -->
    <div id="content">
      <div class="container">
        <div class="row d-flex justify-content-center">
          <div class="col-lg-6 col-xl-3 mb-4" id="create-P">
            <div class="card shadow border-left-dark py-2 card-1">
              <div class="card-body">
                <div class="row align-items-center no-gutters">
                  <div class="col mr-2">
                    <div class="text-uppercase text-dark font-weight-bold text-xs mb-1"><span>Crear
                        Productos</span>
                    </div>
                    <div class="text-dark font-weight-bold h5 mb-0"></div>
                  </div>
                  <div class="col-auto"><i class="far fa-window-restore fa-2x text-gray-300"></i></div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-6 col-xl-3 mb-4" id="list-P">
            <div class="card shadow border-left-dark py-2 card-1">
              <div class="card-body">
                <div class="row align-items-center no-gutters">
                  <div class="col mr-2">
                    <div class="text-uppercase text-dark font-weight-bold text-xs mb-1"><span>Administrar
                        Productos</span></div>
                    <div class="text-dark font-weight-bold h5 mb-0"></div>
                  </div>
                  <div class="col-auto"><i class="far fa-list-alt fa-2x text-gray-300"></i></div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-6 col-xl-3 mb-4" id="report-P">
            <div class="card shadow border-left-dark py-2 card-1">
              <div class="card-body">
                <div class="row align-items-center no-gutters">
                  <div class="col mr-2">
                    <div class="text-uppercase text-dark font-weight-bold text-xs mb-1"><span>ver reporte de los
                        productos</span></div>
                  </div>
                  <div class="col-auto"><i class="fas fa-clipboard-list fa-2x text-gray-300"></i></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="content-Web-option" class="display">
    <!-- Product list -->
    <div id="list-product">
      <div class="card-header">
        <div class="row">
          <div class="col" id="list-product-close"> <i class="fas fa-exchange-alt font-size-icon"></i></div>
        </div>
      </div>
      <div class="container mt-3">
        <div class="row d-flex justify-content-center">
          <div class="col-lg-12">
            <div class="card shadow mb-4">
              <div class="card-header">
                <div class="row">
                  <div class="col">
                    <h6 class="text-success font-weight-bold m-0">Lista de Peoductos &nbsp; shoperiz</h6>
                  </div>
                </div>
              </div>
              <ul class="list-group">
                <li class="list-group-item">
                  <div class="row">
                    <div class="col">
                      <h6><br><strong>Samsung Galaxy A10 Dual Sim SM-A105M LTE</strong><br><br></h6>
                    </div>
                    <div class="col text-break">
                      <div class="mt-3">
                        <div class="btn-group float-right"><button class="btn btn-success" type="button">Ver
                            estado</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <!-- Modal product detail -->
        <div class="modal-box2">
          <div class="modal fade" id="status" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                    aria-hidden="true">×</span></button>
                <div class="modal-body">
                  <div>
                    <h5 class="text-center">Estado del Producto</h5>
                  </div>
                  <div class="row d-flex justify-content-center">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Option of  create product -->
    <div id="create-product">
      <div class="card-header">
        <div class="row">
          <div class="col" id="create-product-close"> <i class="fas fa-exchange-alt font-size-icon"></i>
            <h5 class="text-center text-dark "> Elije tu template favorito </h5>
          </div>
        </div>
      </div>

      <!-- list Template -->
      <div class="container" id="container-list-template">
        <div class="row d-flex justify-content-center">
          <div class="col-md-12" id="add-data-product">
            <div class="card shadow card-1 mt-3">
              <div class="wrapper">
                <div class="container">
                  <div class="m-2 ">
                    <button type="button" class="btn btn-outline-dark btn-sm mt-2 ">Editar <i class="fas fa-edit m-1"></i>
                    </button>
                    <button type="button" class="btn btn-outline-success btn-sm mt-2 ">Vista previa <i
                        class="fas fa-eye m-1"></i></button>
                    <button type="button" class="btn btn-outline-warning btn-sm mt-2"
                      onclick="OtherTemplate(false)">Elejir otro Template<i class="fas fa-pager m-1"></i></button>
                  </div>
                  <form>
                    <h1 class="text-center mt-3">Informacón del Producto </h1>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <input type="text" class="form-control" id="inputEmail4">
                        <label for="inputEmail4">Nombre del producto</label>
                        <div class="line"></div>
                      </div>
                      <div class="form-group col-md-6">
                        <input type="number" class="form-control" id="inputPassword4">
                        <label for="inputPassword4">Precio del producto</label>
                        <div class="line"></div>
                      </div>
                    </div>
                    <div class="form-group">
                      <textarea class="form-control" rows="8"></textarea>
                      <label>Descripción del producto</label>
                      <div class="line"></div>
                    </div>
                    <div class="form-group">
                      <div class="col-md-12 col-lg-12">
                        <button class="file-upload-btn" type="button"
                          onclick="$('.file-upload-input').trigger( 'click' )">Agregar Imagen</button>
                        <div class="image-upload-wrap">
                          <input class="file-upload-input" type='file' onchange="readURL(this);" accept="image/*" />
                          <div class="drag-text">
                            <h3>Seleciona una imagen de tu producto </h3>
                          </div>
                        </div>
                        <div class="file-upload-content">
                          <img class="file-upload-image" src="#" alt="your image" />
                          <div class="image-title-wrap">
                            <button type="button" onclick="removeUpload()" class="btn btn-danger btn-block">Eliminar
                              <span class="image-title">Uploaded
                                Image</span></button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4 col-sm-6" id="check-template-1" onclick="selectTemplate(this.id)">
            <div class="card shadow card-1 mt-3">
              <img class="card-img-top" src="./assets/images/template.png" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">Template #1</h5>
                <button id="btn-template-1" class="btn btn-success btn-sm btn-small" disabled
                  onclick="AddDataTemplated(this.id)">Editar <i class="far fa-edit"></i></button>
                <i id="icon-1" class="fas fa-check-circle text-dark float-right font-size-icon"></i>
              </div>
            </div>
          </div>

          <div class="col-lg-4 col-sm-6" id="check-template-2" onclick="selectTemplate(this.id)">
            <div class="card shadow card-1 mt-3">
              <img class="card-img-top" src="./assets/images/template.png" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">Template #2</h5>
                <button id="btn-template-2" class="btn btn-success btn-sm btn-small" disabled
                  onclick="AddDataTemplated(this.id)">Editar<i class="far fa-edit"></i></button>
                <i id="icon-2" class="fas fa-check-circle text-dark float-right font-size-icon"></i>
              </div>
            </div>
          </div>

        </div>
        <!-- Option report products  -->
        <div id="report-products">
        </div>
      </div>
    </div>
  </div>
  <script src="assets/js/jquery.min.js"></script>
  <script src="assets/bootstrap/js/bootstrap.min.js"></script>
  <script src="assets/js/Dashboard.js"></script>
  <script src="assets/js/UploadImages.js"></script>
</body>